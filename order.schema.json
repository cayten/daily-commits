{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Order",
  "type": "object",
  "required": [
    "id",
    "items",
    "total"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "sku",
          "qty",
          "price"
        ],
        "properties": {
          "sku": {
            "type": "string"
          },
          "qty": {
            "type": "integer",
            "minimum": 1
          },
          "price": {
            "type": "number",
            "minimum": 0.0
          }
        }
      }
    },
    "total": {
      "type": "number",
      "minimum": 0.0
    }
  },
  "additionalProperties": false
}